<%- include('../partials/header', { title: 'Listado de Incidències' }) %>

<div class="container my-5">
  <h1 class="mb-4">Llistat d'incidències</h1>

  <% if (incidencies.length === 0) { %>
    <div class="alert alert-info text-center">
      <i class="bi bi-info-circle"></i> No hi ha incidències per mostrar.
    </div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% incidencies.forEach(function(incidencia) { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= incidencia.nom %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <i class="bi bi-building"></i> <%= incidencia.departament ? incidencia.departament.nom : 'N/A' %> &nbsp;|&nbsp;
                <i class="bi bi-tag"></i> <%= incidencia.tipus.nom %>
              </h6>
              <p class="card-text flex-grow-1"><%= incidencia.descripcio %></p>
              <div class="mt-auto">
                <span class="badge bg-secondary">
                  <i class="bi bi-info-circle"></i> <%= incidencia.estat ? incidencia.estat.nom : 'N/A' %>
                </span>
              </div>
            </div>
            <div class="card-footer text-muted small">
              ID: <%= incidencia.id %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
