<%- include('../partials/header', { title: 'Listado de Incidències' }) %>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Incidències</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container">
    <h1>Llistat d'incidències</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nom</th>
          <th scope="col">Departament</th>
          <th scope="col">Tipus</th>
          <th scope="col">Descripció</th>
          <th scope="col">Estat</th>
        </tr>
      </thead>
      <tbody>
        <% incidencies.forEach(function(incidencia) { %>
          <tr>
            <th><%= incidencia.id %></th>
            <td><%= incidencia.nom %></td>
            <td><%= incidencia.departament ? incidencia.departament.nom : 'N/A' %></td>
            <td><%= incidencia.tipus.nom %></td>
            <td><%= incidencia.descripcio %></td>
            <td><%= incidencia.estat ? incidencia.estat.nom : 'N/A' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('../partials/footer') %>
