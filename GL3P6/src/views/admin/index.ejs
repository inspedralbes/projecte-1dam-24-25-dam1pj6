<%- include('../partials/header', { title: 'Panell d\'Administració' }) %>

<style>
  body {
    background-color: #121212;
    color: #e0e0e0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  h1.card-title {
    color: #90caf9;
  }

  .card {
    background-color: #545454;
    border-radius: 10px;
  }

  .card-body {
    padding: 30px;
  }

  .table {
    background-color: #1e1e1e;
    color: #fff;
    border-radius: 10px;
    overflow: hidden;
  }

  .table thead {
    background-color: #2c2c2c;
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #2a2a2a;
  }

  .table th, .table td {
    vertical-align: middle !important;
  }

  .btn-warning {
    background: linear-gradient(135deg, #ffcc00, #ff9100);
    border: none;
    color: white;
    padding: 10px 20px;
    font-weight: bold;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }

  .btn-warning:hover {
    background: linear-gradient(135deg, #ff9100, #ffcc00);
    box-shadow: 0 0 10px #ffcc0090;
  }

  .btn-danger {
    background: linear-gradient(135deg, #ff3d00, #e53935);
    border: none;
    color: white;
    padding: 10px 20px;
    font-weight: bold;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }

  .btn-danger:hover {
    background: linear-gradient(135deg, #e53935, #ff3d00);
    box-shadow: 0 0 10px #ff3d0090;
  }
</style>

<div class="container mt-5">
  <div class="card shadow">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Administració d'Incidències</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Departament</th>
            <th>Tipus</th>
            <th>Data Creació</th>
            <th>Tècnic</th>
            <th>Estat</th>
            <th>Data resolució</th>
            <th>Accions</th>
          </tr>
        </thead>
        <tbody>
          <% incidencies.forEach(incidencia => { %>
            <tr>
              <td><%= incidencia.id %></td>
              <td><%= incidencia.nom %></td>
              <td><%= incidencia.departament ? incidencia.departament.nom : 'N/A' %></td>
              <td><%= incidencia.tipus %></td>
              <td><%= incidencia.datacreacio %></td>
              <td><%= incidencia.tecnic ? incidencia.tecnic.nom: 'N/A' %></td>
              <td><%= incidencia.estat ? incidencia.estat.nom : 'N/A' %></td>
              <td><%= incidencia.dataresolucio %></td>
              <td>
                <a href="/admin/<%= incidencia.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
                <a href="/admin/<%= incidencia.id %>/delete" class="btn btn-danger btn-sm">Eliminar</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
