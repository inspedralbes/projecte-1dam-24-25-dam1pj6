<%- include('../partials/header', { title: 'Tècnic' }) %>

<div class="container py-5">
  <h1 class="text-center mb-4" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #333;">Selecciona Tècnic</h1>

  <form action="/tecnic/incidencies" method="GET">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% tecnics.forEach((tecnic) => { %>
        <div class="col mb-4">
          <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body text-center p-3">
              <i class="bi bi-person-circle display-4 mb-2" style="color: #2c3e50;"></i>
              <h5 class="card-title" style="font-size: 1.25rem; color: #333;"> <%= tecnic.nom %> </h5>
              <button type="submit" class="btn btn-dark btn-sm" name="tecnic_id" value="<%= tecnic.id %>" style="border-radius: 8px; width: 100%; font-size: 1rem;">
                <i class="bi bi-eye me-2"></i> Veure incidències
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </form>

  <div class="text-center my-4">
    <form action="/tecnic/incidencies/resoltes" method="GET">
      <button type="submit" class="btn btn-outline-dark btn-sm px-4 py-2" style="border-radius: 8px; font-size: 1rem;">
        <i class="bi bi-check-circle me-2"></i> Veure totes les incidències resoltes
      </button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>

