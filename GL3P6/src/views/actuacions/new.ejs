<%- include('../partials/header', { title: 'Nova Actuació' }) %>

<h1>Afegir nova actuació a la Incidència: <%= incidencia.nom %></h1>

<form action="/tecnic/incidencies/<%= incidencia.id %>/actuacions/create" method="POST">
  <div class="form-group">
    <label for="descripcio">Descripció:</label>
    <input type="text" name="descripcio" id="descripcio" class="form-control" required>
  </div>

  <div class="form-group">
    <label for="temps_invertit">Temps invertit (minuts):</label>
    <input type="number" name="temps_invertit" id="temps_invertit" class="form-control" required>
  </div>

  <div class="form-group">
    <label for="visible_per_usuari">Visible per l'usuari:</label>
    <input type="checkbox" name="visible_per_usuari" id="visible_per_usuari" value="true" />
  </div>

  <div class="form-group">
    <label for="resolt">Resolta:</label>
    <input type="checkbox" name="resolt" id="resolt" value="true" />
  </div>

  <button type="submit" class="btn btn-primary">Afegir actuació</button>
</form>

<%- include('../partials/footer') %>
